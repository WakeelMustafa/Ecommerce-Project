<div class="modal-header">
  <h5 class="modal-title" id="exampleModalLabel" style="text-align:center;">ADD COMMENT</h5>
  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>
<div class="modal-body" style="text-align:center;">
  <%= form_for [@product, @comment], remote: true do |f| %>
  <div class="form-group mt-4">
    <%= f.label :Comment %><br />
    <%= f.text_field :text %>
  </div>
  <%= f.submit "ADD Comment", class: 'btn btn-primary mt-4' %>
  <button type="button" class="btn btn-secondary" style="margin-top:22px" data-dismiss="modal">Close</button>

  <% end %>
</div>
