<marquee> Specail Discount Coupons for first 50 Customers </marquee>
<div style="text-align:center">
  <h1>Welcome To The Ecommerce Website</h1>
  <h2 style="margin-bottom:36px">All Available Products</h2>
</div>
<div class="container">
  <div class="row">
    <% @products.each do |product|  %>
    <div class="col-sm-3">
      <div class="card" style="width: 18rem;">
        <% abc = product.images %>
        <%= image_tag(abc.first) if abc.first.present? %>

        <div class="card-body">
          <h5 class="card-title"><%= product.price%></h5>
          <h5 class="card-title"><%=product.name%></h5>

          <p class="card-text"><%=product.description%></p>
          <div class="btn-group">
            <%= link_to 'Details', myproduct_url(product), :class=>"btn btn-info"%>

          </div>

        </div>
      </div>
    </div>
    <%end%>
  </div>

</div>
